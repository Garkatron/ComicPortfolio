---
import Book from "../components/Book.astro";
import ComicPhoto from "../components/ComicPhoto.astro";
import Page from "../components/Page.astro";
import ProjectCard from "../components/ProjectCard.astro";
import TabPanel from "../components/TabPanel.astro";
import "../styles/global.css";
import ICON_ASTRO from "../assets/icon/orange-astro.svg";
import ICON_JAVA from "../assets/icon/java.svg";
import ICON_TS from "../assets/icon/ts.svg";
import ICON_REACT from "../assets/icon/react.svg";
import ICON_JS from "../assets/icon/js.svg";
import ICON_NODE from "../assets/icon/node.svg";
import ICON_SQL from "../assets/icon/sql.svg";
import ICON_MONGO from "../assets/icon/mongo.svg";
import { Image } from "astro:assets";
import noirmale2 from "../assets/noirmale2.png";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />

		<meta name="portfolio" content="myname portfolio" />
		<meta name="author" content="myname" />
		<meta name="creator" content="@Garkatron @Deus" />

		<link
			rel="preload"
			as="image"
			href="/assets/background/paper_texture310_black.jpg"
			fetchpriority="high"
		/>
		<link
			rel="preload"
			as="image"
			href="/assets/background/paper_texture310.jpg"
			fetchpriority="high"
		/>
		<title>Portfolio</title>
	</head>
	<style>
		.header {
			min-height: 70px;
			clip-path: polygon(0 -2%, 100% 0, 100% 83%, 0 100%);
		}
	</style>
	<body class="doodle container mx-auto p-4">
		<Book>
			<!-- Página 1: Perfil -->
			<Page index={1} totalCards={6}>
				<div slot="front" class="flex flex-col w-full h-full">
					<Image
						src={noirmale2}
						alt="ProfilePhoto"
						width={600}
						height={790}
						loading="eager"
						fetchpriority="high"
						style={"height: 100%; object-fit: cover;"}
					/>
				</div>
				<div slot="back" class="flex flex-col w-full h-full">
					<div class="has-comic-bg relative p-4 mb-4">
						<h2
							class="text-2xl font-bold mb-2"
							style="margin-left: 15px;"
						>
							Contact Me
						</h2>
					</div>
					<form
						action="https://formspree.io/f/your_form_id"
						method="POST"
						class="flex flex-col gap-4 p-4"
					>
						<!-- Formulario aquí igual que lo tenías -->
					</form>
				</div>
			</Page>

			<!-- Página 2: Presentación -->
			<Page index={2} totalCards={6}>
				<div slot="front" class="flex flex-col w-full h-full">
					<div class="h-2/3 w-full bg-cover bg-center">
						<ComicPhoto class="object-cover" />
					</div>
					<div
						class="h-1/3 w-full p-6 flex flex-col justify-center items-center"
					>
						<h1
							class="text-center text-lg sm:text-xl md:text-2xl lg:text-3xl xl:text-4xl font-bold"
						>
							Hi! I'm [YourName]
						</h1>
						<TabPanel
							initialTab="about"
							tabs={[
								{
									id: "default",
									label: "About",
									content: "Lorem ipsum1...",
								},
								{
									id: "other",
									label: "Other",
									content: "Lorem ipsum2...",
								},
								{
									id: "other2",
									label: "Other2",
									content: "Lorem ipsum3...",
								},
							]}
						/>
					</div>
				</div>
				<div slot="back" class="flex flex-col w-full h-full">
					<div class="header has-comic-bg">
						<h2
							class="text-2xl font-bold mb-2"
							style="margin-left: 15px;"
						>
							Featured Projects
						</h2>
					</div>
					<div class="w-full grid grid-cols-2 grid-rows-5 gap-4">
						<ProjectCard
							src="https://placehold.co/400x400"
							title="Project1"
							description="Description."
							icons={[
								{ src: ICON_REACT, alt: "React" },
								{ src: ICON_TS, alt: "TS" },
							]}
						/>
						<ProjectCard
							src="https://placehold.co/400x400"
							title="Project2"
							description="Description."
							icons={[
								{ src: ICON_JAVA, alt: "Java" },
								{ src: ICON_SQL, alt: "SQL" },
							]}
						/>
					</div>
				</div>
			</Page>

			<!-- Página 3: Proyectos -->
			<Page index={3} totalCards={6}>
				<div slot="front" class="flex flex-col w-full h-full">
					<div class="header has-comic-bg">
						<h2
							class="text-2xl font-bold mb-2"
							style="margin-left: 15px;"
						>
							Projects
						</h2>
					</div>
					<div
						class="grid grid-cols-4 grid-rows-3 gap-2 w-full h-full p-2 bg-gray-900"
					>
						<!-- Aquí van tus imágenes de proyectos -->
					</div>
				</div>
				<div slot="back" class="flex flex-col w-full h-full">
					<div class="header has-comic-bg">
						<h2
							class="text-2xl font-bold mb-2"
							style="margin-left: 15px;"
						>
							Tecnologías
						</h2>
					</div>
					<div
						class="flex flex-wrap gap-6 justify-center items-center p-6"
					>
						<Image
							width={80}
							height={80}
							src={ICON_ASTRO}
							alt="Astro"
							class="w-16 h-16"
						/>
						<Image
							width={80}
							height={80}
							src={ICON_REACT}
							alt="React"
							class="w-16 h-16"
						/>
						<Image
							src={ICON_TS}
							alt="TypeScript"
							class="w-16 h-16"
							width={80}
							height={80}
						/>
						<Image
							src={ICON_NODE}
							alt="Node.js"
							class="w-16 h-16"
							width={80}
							height={80}
						/>
						<Image
							src={ICON_SQL}
							alt="SQL"
							class="w-16 h-16"
							width={80}
							height={80}
						/>
						<Image
							src={ICON_MONGO}
							alt="MongoDB"
							class="w-16 h-16"
							width={80}
							height={80}
						/>
						<Image
							src={ICON_JAVA}
							alt="Java"
							class="w-16 h-16"
							width={80}
							height={80}
						/>
						<Image
							src={ICON_JS}
							width={80}
							height={80}
							alt="JavaScript"
							class="w-16 h-16"
						/>
					</div>
				</div>
			</Page>

			<!-- Página 4: Tecnologías -->
			<Page index={4} totalCards={6}>
				<div slot="front" class="flex flex-col w-full h-full">
					<div class="header has-comic-bg">
						<h2
							class="text-2xl font-bold mb-2"
							style="margin-left: 15px;"
						>
							Estudios
						</h2>
					</div>
					<div class="p-6 flex flex-col gap-4">
						<p>
							<strong>Licenciatura en X</strong> – Universidad Y (2015
							- 2019)
						</p>
						<p><strong>Curso en Z</strong> – Academia W (2020)</p>
					</div>
				</div>
				<div slot="back" class="flex flex-col w-full h-full">
					<div class="header has-comic-bg">
						<h2
							class="text-2xl font-bold mb-2"
							style="margin-left: 15px;"
						>
							Experiencia Laboral
						</h2>
					</div>
					<div class="p-6 flex flex-col gap-4">
						<p>
							<strong>Empresa A</strong> – Desarrollador Frontend (2019
							- 2021)
						</p>
						<p>
							<strong>Empresa B</strong> – Fullstack Developer (2021
							- 2023)
						</p>
					</div>
				</div>
			</Page>

			<!-- Página 5: Estudios -->
			<Page index={5} totalCards={6}>
				<div slot="front" class="flex flex-col w-full h-full">
					<div class="header has-comic-bg">
						<h2
							class="text-2xl font-bold mb-2"
							style="margin-left: 15px;"
						>
							Achievements
						</h2>
					</div>
					<ul class="list-disc list-inside">
						<li>Improved website performance by 40%</li>
						<li>Implemented automated testing pipelines</li>
						<li>Mentored 3 junior developers</li>
					</ul>
				</div>
				<div slot="back" class="flex flex-col w-full h-full"></div>
			</Page>

			<!-- Página 7: Contacto -->
			<Page index={6} totalCards={6}>
				<div slot="front" class="flex flex-col w-full h-full"></div>
				<div slot="back" class="flex flex-col w-full h-full"></div>
			</Page>
		</Book>
	</body>
</html>
