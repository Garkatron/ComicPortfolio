---
import { Image } from "astro:assets";
import "../styles/global.css";
import ComicPhoto from "../components/ComicPhoto.astro";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>

		<style>
			html,
			body {
				display: flex;
				margin: 0;
				width: 100%;
				justify-content: center;
				align-items: center;
			}

			.content {
				background-color: whitesmoke;
				display: flex;
				flex-direction: column;
				border: 2px black solid;
			}

			.box {
				position: relative;
				margin: 10px;
				max-width: 1200px;
				overflow: visible;
			}

			.box > * {
				position: relative;
				z-index: 1;
			}

			.projects-grid {
				display: grid;
				width: 100%;
				height: 100%;
			}
			.featured-project {
				flex: 1;
				width: 100%;
				height: 100%;
				object-fit: cover;
				border: 2px solid white;
			}
			.feature-projects {
				display: flex;
				gap: 10px;
				flex: 1;
			}

			#f1 {
				flex: 4;
				flex-direction: column;
				clip-path: polygon(0 0, 100% 0, 100% 95%, 0 100%);
				padding: 50px;
			}
			#f3 {
				flex: 3;
				padding: 50px;

				clip-path: polygon(0 0, 100% 5%, 100% 100%, 0 100%);
			}

			#f2 {
				flex: 2;
				flex-direction: row;
				gap: 10px;
				flex-wrap: wrap;
				padding: 50px;

				clip-path: polygon(0 5%, 100% 0, 100% 100%, 0 95%);
			}

			#about {
				font-size: clamp(1rem, 1.8vw, 2.3rem);
			}
		</style>
	</head>
	<body>
		<div class="content">
			<div
				id="f1"
				class="box has-comic-bg has-comic-border-simple is-flex is-justify-content-center is-align-items-center"
			>
