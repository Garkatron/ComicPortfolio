---
import Book from "../components/Book.astro";
import ComicPhoto from "../components/ComicPhoto.astro";
import Page from "../components/Page.astro";
import ProjectCard from "../components/ProjectCard.astro";
import TabPanel from "../components/TabPanel.astro";
import "../styles/global.css";
import ICON_ASTRO from "../assets/icon/orange-astro.svg";
import ICON_JAVA from "../assets/icon/java.svg";
import ICON_TS from "../assets/icon/ts.svg";
import ICON_REACT from "../assets/icon/react.svg";
import ICON_JS from "../assets/icon/js.svg";
import ICON_NODE from "../assets/icon/node.svg";
import ICON_SQL from "../assets/icon/sql.svg";
import ICON_MONGO from "../assets/icon/mongo.svg";
import { Image } from "astro:assets";
import noirmale2 from "../assets/noirmale2.png";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />

		<meta name="portfolio" content="myname portfolio" />
		<meta name="author" content="myname" />
		<meta name="creator" content="@Garkatron @Deus" />

		<link
			rel="preload"
			as="image"
			href="/assets/background/paper_texture310_black.jpg"
			fetchpriority="high"
		/>
		<link
			rel="preload"
			as="image"
			href="/assets/background/paper_texture310.jpg"
			fetchpriority="high"
		/>
		<title>Portfolio</title>
	</head>
	<style>
		.parent {
			display: grid;
			grid-template-columns: repeat(2, 1fr);
			grid-template-rows: repeat(3, 1fr);
			grid-column-gap: 0px;
			grid-row-gap: 0px;
			height: 100%;
			width: 100%;
			gap: 0;
			position: relative;
		}

		.item {
			background-position: center center;
			background-repeat: no-repeat;
			background-size: cover;
			background-image: url("https://picsum.photos/200/100");
			width: 100%;
			height: 100%;
			filter: grayscale(100%);
			transition:
				filter 0.5s ease,
				transform 0.3s ease;
			transform-origin: center;
			z-index: 1;
			position: relative;
		}

		.item:hover {
			filter: grayscale(0%);
			transform: scale(1.5);
		}

		.div1 {
			grid-area: 1 / 1 / 2 / 3;
			position: relative;
			z-index: 1;
			overflow: visible;
		}
		.shadow1 {
			position: absolute;
			inset: 0;
			background: #3c3c3c;
			z-index: -1;
			clip-path: polygon(0 -2%, 100% 0, 100% 83%, 0 100%);
		}
		.shadow1 .item {
			clip-path: polygon(1% 2%, 99% 2%, 99% 80%, 1% 99%);
		}

		.div2 {
			grid-area: 2 / 1 / 3 / 2;
			position: relative;
			z-index: 1;
			overflow: visible;
		}
		.shadow2 {
			content: "";
			position: absolute;
			inset: 0;
			background: #3c3c3c;
			z-index: -1;
			clip-path: polygon(0 3%, 100% 13%, 100% 100%, 0 91%);
		}
		.shadow2 .item {
			clip-path: polygon(0 3%, 100% 13%, 100% 100%, 0 91%);
		}

		.div3 {
			grid-area: 2 / 2 / 3 / 3;
			position: relative;
			z-index: 1;
			overflow: visible;
		}
		.shadow3 {
			content: "";
			position: absolute;
			inset: 0;
			background: #3c3c3c;
			z-index: -1;
			clip-path: polygon(0 9%, 100% 0, 100% 87%, 0 97%);
		}
		.shadow3 .item {
			clip-path: polygon(0 9%, 100% 0, 100% 87%, 0 97%);
		}

		.div4 {
			grid-area: 3 / 1 / 4 / 3;
			position: relative;
			z-index: 1;
			overflow: visible;
		}
		.shadow4 {
			content: "";
			position: absolute;
			inset: 0;
			background: #3c3c3c;
			z-index: -1;
			clip-path: polygon(0 9%, 100% 0, 100% 87%, 0 97%);
		}
		.shadow4 .item {
			clip-path: polygon(0 9%, 100% 0, 100% 87%, 0 97%);
		}
	</style>
	<body class="doodle container mx-auto p-4">
		<Book>
			<Page index={1} totalCards={4}>
				<div slot="front" class="flex flex-col w-full h-full">
					<Image
						src={noirmale2}
						alt="ProfilePhoto"
						width={600}
						height={790}
						loading="eager"
						fetchpriority="high"
						style={"height: 100%; object-fit: cover;"}
					/>
				</div>
				<div slot="back" class="flex flex-col w-full h-full"></div>
			</Page>
			<Page index={2} totalCards={4}>
				<div slot="front" class="flex flex-col w-full h-full">
					<div class="h-2/3 w-full bg-cover bg-center">
						<ComicPhoto class="object-cover" />
					</div>

					<div
						class="h-1/3 w-full p-6 flex flex-col justify-center items-center"
					>
						<h1
							class="text-center text-lg sm:text-xl md:text-2xl lg:text-3xl xl:text-4xl font-bold"
						>
							Hi! I'm [YourName]
						</h1>

						<TabPanel
							initialTab="about"
							tabs={[
								{
									id: "default",
									label: "About",
									content:
										"Lorem ipsum dolor sit amet consectetur adipisicing elit. Atque at fugiat veritatis dolores harum laboriosam iste sunt, qui deserunt ipsa alias eveniet, incidunt architecto? Cum maxime nulla cupiditate consequuntur officia!",
								},
								{
									id: "other",
									label: "Other",
									content:
										"Lorem ipsum dolor sit amet consectetur adipisicing elit.",
								},
								{
									id: "other2",
									label: "Other2",
									content: "Lorem ipsum dolor sit amet.",
								},
							]}
						/>
					</div>
				</div>
				<div slot="back" class="flex flex-col w-full h-full">
					<div class="has-comic-bg" style="padding: 5px;">
						<h2
							class="text-2xl font-bold mb-2"
							style="margin-left: 15px;"
						>
							Featured Projects
						</h2>
					</div>

					<div class="w-full grid grid-cols-2 grid-rows-5 gap-4">
						<div>
							<ProjectCard
								src="https://placehold.co/400x400"
								title="Project1"
								description="Description."
								icons={[
									{ src: ICON_REACT, alt: "React" },
									{ src: ICON_TS, alt: "TypeScript" },
									{ src: ICON_NODE, alt: "Node.js" },
									{ src: ICON_MONGO, alt: "MongoDB" },
								]}
							/>
						</div>
						<div>
							<ProjectCard
								src="https://placehold.co/400x400"
								title="Project1"
								description="Description."
								icons={[
									{ src: ICON_REACT, alt: "React" },
									{ src: ICON_TS, alt: "TypeScript" },
									{ src: ICON_NODE, alt: "Node.js" },
									{ src: ICON_MONGO, alt: "MongoDB" },
								]}
							/>
						</div>
						<div class="row-start-2">
							<ProjectCard
								src="https://placehold.co/400x400"
								title="Project1"
								description="Description."
								icons={[
									{ src: ICON_REACT, alt: "React" },
									{ src: ICON_TS, alt: "TypeScript" },
									{ src: ICON_NODE, alt: "Node.js" },
									{ src: ICON_MONGO, alt: "MongoDB" },
								]}
							/>
						</div>
						<div class="row-start-2">
							<ProjectCard
								src="https://placehold.co/400x400"
								title="Project1"
								description="Description."
								icons={[
									{ src: ICON_REACT, alt: "React" },
									{ src: ICON_TS, alt: "TypeScript" },
									{ src: ICON_NODE, alt: "Node.js" },
									{ src: ICON_MONGO, alt: "MongoDB" },
								]}
							/>
						</div>
					</div>
				</div>
			</Page>
			<Page index={3} totalCards={4}>
				<div slot="front" class="flex flex-col w-full h-full">
					<div
						class="parent grid grid-cols-2 grid-rows-5 gap-0 overflow-visible relative has-comicg"
					>
						<div class="div1">
							<div class="shadow1">
								<div class="item"></div>
							</div>
						</div>
						<div class="div2">
							<div class="shadow2">
								<div class="item"></div>
							</div>
						</div>
						<div class="div3 row-span-2">
							<div class="shadow3">
								<div class="item"></div>
							</div>
						</div>
						<div class="div4">
							<div class="shadow4">
								<div class="item"></div>
							</div>
						</div>
					</div>
				</div>
				<div slot="back" class="flex flex-col w-full h-full">
					<div class="has-comic-bg relative p-4 mb-4">
						<h2
							class="text-2xl font-bold mb-2"
							style="margin-left: 15px;"
						>
							Contact Me
						</h2>
					</div>

					<form
						action="https://formspree.io/f/your_form_id"
						method="POST"
						class="flex flex-col gap-4"
					>
						<!-- Name -->
						<div class="flex flex-col">
							<label class="font-semibold mb-1" for="name"
								>Name</label
							>
							<input
								class="border rounded p-2"
								type="text"
								name="name"
								id="name"
								placeholder="Your name"
								required
							/>
						</div>

						<!-- Email -->
						<div class="flex flex-col">
							<label class="font-semibold mb-1" for="email"
								>Email</label
							>
							<input
								class="border rounded p-2"
								type="email"
								name="email"
								id="email"
								placeholder="you@example.com"
								required
							/>
						</div>

						<!-- Subject -->
						<div class="flex flex-col">
							<label class="font-semibold mb-1" for="subject"
								>Subject</label
							>
							<input
								class="border rounded p-2"
								type="text"
								name="subject"
								id="subject"
								placeholder="Subject"
							/>
						</div>

						<!-- Message -->
						<div class="flex flex-col">
							<label class="font-semibold mb-1" for="message"
								>Message</label
							>
							<textarea
								class="border rounded p-2 h-32 resize-none"
								name="message"
								id="message"
								placeholder="Your message..."
								required></textarea>
						</div>

						<!-- Terms checkbox -->
						<div class="flex items-center gap-2">
							<input
								type="checkbox"
								name="terms"
								id="terms"
								required
							/>
							<label for="terms"
								>I agree to the <a href="#"
									>terms and conditions</a
								></label
							>
						</div>

						<!-- Submit button -->
						<div class="flex gap-2">
							<button
								type="submit"
								class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition"
							>
								Submit
							</button>
							<button
								type="reset"
								class="bg-gray-200 text-gray-800 px-4 py-2 rounded hover:bg-gray-300 transition"
							>
								Cancel
							</button>
						</div>
					</form>
				</div>
			</Page>
			<Page index={4} totalCards={4}>
				<div slot="front" class="flex flex-col w-full h-full">
					<div class="h-full"></div>
				</div>
				<div
					slot="back"
					class="flex flex-col w-full h-full has-comic-bg"
				>
				</div>
			</Page>
		</Book>
	</body>
</html>
