---
import Book from "../components/Book.astro";
import ComicPhoto from "../components/ComicPhoto.astro";
import Page from "../components/Page.astro";
import ProjectCard from "../components/ProjectCard.astro";
import TabPanel from "../components/TabPanel.astro";
import "../styles/global.css";
import ICON_ASTRO from "../assets/icon/orange-astro.svg";
import ICON_JAVA from "../assets/icon/java.svg";
import ICON_TS from "../assets/icon/ts.svg";
import ICON_REACT from "../assets/icon/react.svg";
import ICON_JS from "../assets/icon/js.svg";
import ICON_NODE from "../assets/icon/node.svg";
import ICON_SQL from "../assets/icon/sql.svg";
import ICON_MONGO from "../assets/icon/mongo.svg";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />

		<meta name="portfolio" content="myname portfolio" />
		<meta name="author" content="myname" />
		<meta name="creator" content="@Garkatron @Deus" />

		<link
			rel="preload"
			as="image"
			href="/assets/background/paper_texture310_black.jpg"
			fetchpriority="high"
		/>
		<link
			rel="preload"
			as="image"
			href="/assets/background/paper_texture310.jpg"
			fetchpriority="high"
		/>
		<title>Portfolio</title>
	</head>
	<style>
		#test {
			justify-content: center;
			align-items: center;
			display: flex;
			justify-content: center;
			flex-direction: column;
		}
		.item {
			position: absolute;
			min-width: 100px;
			min-height: 100px;
		}
		#maletin {
			background-image: url("/assets/background/maletin2.png");
			background-repeat: no-repeat;
			background-position: center;
			background-size: 600px;
			min-height: 600px;

			display: grid;
			grid-template-columns: 0.5fr repeat(2, 1fr) 0.5fr; /* equilibrio */
			grid-template-rows: repeat(2, 0.65fr) 3fr;
			grid-column-gap: 0;
			grid-row-gap: 0;
			align-items: center;
			justify-items: center;
		}

		.div1 {
			grid-area: 3 / 1 / 4 / 3;
		}
		.div2 {
			grid-area: 3 / 1 / 4 / 4;
		}
		.div3 {
			grid-area: 3 / 4 / 4 / 5;
		}
	</style>
	<body>
		<Book>
			<Page index={1} totalCards={2}>
				<div
					slot="front"
					style="display: flex; flex-direction: column; width: 100%; height: 100%;"
				>
					<div
						style="background-image: url('assets/background/paper_texture310.jpg'); background-color: whitesmoke; padding: 20px;"
					>
						<ComicPhoto />
						<div
							id="f1"
							class="box has-comic-bg has-comic-border-simple"
						>
							<h1 class="title is-1">Hi! I'm [YourName]</h1>

							<TabPanel
								initialTab="about"
								,
								tabs={[
									{
										id: "default",
										label: "About",
										content:
											"Lorem ipsum dolor sit amet consectetur adipisicing elit. Atque at fugiat veritatis dolores harum laboriosam iste sunt, qui deserunt ipsa alias eveniet, incidunt architecto? Cum maxime nulla cupiditate consequuntur officia!",
									},
									{
										id: "other",
										label: "Other",
										content:
											"Lorem ipsum dolor sit amet consectetur adipisicing elit.",
									},
									{
										id: "other2",
										label: "Other2",
										content: "Lorem ipsum dolor sit amet.",
									},
								]}
							/>
						</div>
					</div>
				</div>
				<div
					slot="back"
					style="display: flex; flex-direction: column; width: 100%; height: 100%;"
				>
					<div class="box has-comic-bg">
						<h2 class="title is-2">Featured Projects</h2>
					</div>

					<div class="columns">
						<div class="column">
							<ProjectCard
								src="https://placehold.co/400x400"
								title="Project1"
								description="Description."
								icons={[
									{ src: ICON_REACT, alt: "React" },
									{ src: ICON_TS, alt: "TypeScript" },
									{ src: ICON_NODE, alt: "Node.js" },
									{ src: ICON_MONGO, alt: "MongoDB" },
								]}
							/>
							<ProjectCard
								src="https://placehold.co/400x400"
								title="Project1"
								description="Description."
								icons={[
									{ src: ICON_REACT, alt: "React" },
									{ src: ICON_TS, alt: "TypeScript" },
									{ src: ICON_NODE, alt: "Node.js" },
									{ src: ICON_MONGO, alt: "MongoDB" },
								]}
							/>
						</div>
						<div class="column">
							<ProjectCard
								src="https://placehold.co/400x400"
								title="Project1"
								description="Description."
								icons={[
									{ src: ICON_REACT, alt: "React" },
									{ src: ICON_TS, alt: "TypeScript" },
									{ src: ICON_NODE, alt: "Node.js" },
									{ src: ICON_MONGO, alt: "MongoDB" },
								]}
							/>
							<ProjectCard
								src="https://placehold.co/400x400"
								title="Project1"
								description="Description."
								icons={[
									{ src: ICON_REACT, alt: "React" },
									{ src: ICON_TS, alt: "TypeScript" },
									{ src: ICON_NODE, alt: "Node.js" },
									{ src: ICON_MONGO, alt: "MongoDB" },
								]}
							/>
						</div>
					</div>
				</div>
			</Page>
			<Page index={2} totalCards={2}>
				<div
					slot="front"
					style="display: flex; flex-direction: column; width: 100%; height: 100%;"
				>
					<div class="box has-comic-bg">
						<h2 class="title is-2">Projects</h2>
					</div>

					<div class="fixed-grid has-3-cols projects-grid">
						<div class="grid">
							<img
								class="cell"
								src="https://placehold.co/200x100"
								alt=""
							/>

							<img
								class="cell"
								src="https://placehold.co/200x100"
								alt=""
							/>
							<img
								class="cell"
								src="https://placehold.co/200x100"
								alt=""
							/>
							<img
								class="cell"
								src="https://placehold.co/200x100"
								alt=""
							/>
							<img
								class="cell"
								src="https://placehold.co/200x100"
								alt=""
							/>
							<img
								class="cell"
								src="https://placehold.co/200x100"
								alt=""
							/>
							<img
								class="cell"
								src="https://placehold.co/200x100"
								alt=""
							/>
							<img
								class="cell"
								src="https://placehold.co/200x100"
								alt=""
							/>
							<img
								class="cell"
								src="https://placehold.co/200x100"
								alt=""
							/>
							<img
								class="cell"
								src="https://placehold.co/200x100"
								alt=""
							/>
							<img
								class="cell"
								src="https://placehold.co/200x100"
								alt=""
							/>
							<img
								class="cell"
								src="https://placehold.co/200x100"
								alt=""
							/>
						</div>
					</div>
				</div>
				<!-- BACK -->
				<div
					slot="back"
					style="display: flex; flex-direction: column; width: 100%; height: 100%;"
				>
					<div class="field has-comic-bg">
						<label class="label">Name</label>
						<div class="control">
							<input
								class="input"
								type="text"
								placeholder="Text input"
							/>
						</div>
					</div>

					<div class="field has-comic-bg">
						<label class="label">Username</label>
						<div class="control has-icons-left has-icons-right">
							<input
								class="input is-success"
								type="text"
								placeholder="Text input"
								value="bulma"
							/>
							<span class="icon is-small is-left">
								<i class="fas fa-user"></i>
							</span>
							<span class="icon is-small is-right">
								<i class="fas fa-check"></i>
							</span>
						</div>
						<p class="help is-success">
							This username is available
						</p>
					</div>

					<div class="field has-comic-bg">
						<label class="label">Email</label>
						<div class="control has-icons-left has-icons-right">
							<input
								class="input is-danger"
								type="email"
								placeholder="Email input"
								value="hello@"
							/>
							<span class="icon is-small is-left">
								<i class="fas fa-envelope"></i>
							</span>
							<span class="icon is-small is-right">
								<i class="fas fa-exclamation-triangle"></i>
							</span>
						</div>
						<p class="help is-danger">This email is invalid</p>
					</div>

					<div class="field has-comic-bg">
						<label class="label">Subject</label>
						<div class="control">
							<div class="select">
								<select>
									<option>Select dropdown</option>
									<option>With options</option>
								</select>
							</div>
						</div>
					</div>

					<div class="field has-comic-bg">
						<label class="label">Message</label>
						<div class="control">
							<textarea class="textarea" placeholder="Textarea"
							></textarea>
						</div>
					</div>

					<div class="field has-comic-bg">
						<div class="control">
							<label class="checkbox">
								<input type="checkbox" />
								I agree to the <a href="#"
									>terms and conditions</a
								>
							</label>
						</div>
					</div>

					<div class="field has-comic-bg">
						<div class="control">
							<label class="radio">
								<input type="radio" name="question" />
								Yes
							</label>
							<label class="radio">
								<input type="radio" name="question" />
								No
							</label>
						</div>
					</div>

					<div class="field has-comic-bg is-grouped">
						<div class="control">
							<button class="button is-link">Submit</button>
						</div>
						<div class="control">
							<button class="button is-link is-light"
								>Cancel</button
							>
						</div>
					</div>
				</div>
			</Page>
		</Book>
	</body>
</html>
